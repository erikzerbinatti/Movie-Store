<h1>Novo Filme</h1>

<%= form_for(@movie) do |f| %>
 
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-add"%>
    <%= link_to '<< Voltar a lista de filmes', movies_path, class:"btn btn-voltar"%>
  </div>
<% end %>
